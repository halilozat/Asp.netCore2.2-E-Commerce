@model OrderListModel
@{
    Layout = "_LayoutAdmin";
}


<h1 class="mt-5">Sipariş Durumu</h1>
<hr />

<form method="post">
    <div class="row">
        <div class="col-md-8">
            <strong>
                <div class="form-group row">
                    <div class="col-md-9">
                        <input type="hidden" asp-for="OrderId"/>
                        <h3>Sipariş Numarası: #@Model.OrderNumber</h3>
                        <label asp-for="OrderState" class="col-md-2 col-form-label"></label>


                        <select asp-for="OrderState">

                            @foreach (var state in ViewBag.States)
                            {
                                <option value="@state">@GetEnumValue.GetDescription(state)</option>
                            }
                        </select>


                        @*<select asp-for="orderState" asp-items="Html.GetEnumSelectList<EnumOrderState>()">
                                <option selected="selected" value="">Ödeme Durumunu Seçin!</option>
                            </select>*@

                        <span asp-validation-for="OrderState" class="text-danger" />
                    </div>
                </div>
            </strong>
            <hr />
            <div class="form-group row">
                <div class="col-md-10 offset-md-2 btn-lg">
                    <button type="submit" class="btn btn-primary">Siparişi Düzenle</button>
                </div>
            </div>
        </div>
    </div>
</form>

