@model ShopApp.WebUI.Models.ProductListModel


<div class="row">
        <partial name="_slider" />
</div>

<section class="breadcrumb-section set-bg mb-3" data-setbg="img/breadcrumb.jpg" style="background: #7b3200">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Öne Çıkan Ürünler</h2>
                    <div class="breadcrumb__option">
                        <a asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        <span>Öne Çıkan Ürünler</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="row">

    @foreach (var product in Model.Products)
    {
        <partial name="_product" for="@product" />
    }

</div>    


