@model List<OrderListModel>
@{
    ViewData["Title"] = "GetOrders";
}

<h1>Orders</h1>
<hr />

@foreach(var order in Model)
{
    <table id="example" class="table table-bordered table-sm mb-5">
        <thead class="bg-dark text-white">
            <tr>
                <td colspan="2">Sipariş Id: #@order.OrderId</td>
                <th>Fiyat</th>
                <th>Miktar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var orderItem in order.OrderItems)
            {
                <tr>
                    <td style="width:60px">
                        <img src="~/img/@orderItem.ImageUrl" width="50"/>
                    </td>
                    <td>
                        @orderItem.Name
                    </td>
                    <td>
                        @orderItem.Price
                    </td>
                    <td>
                        @orderItem.Quantity
                    </td>

                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="2">Müşteri Adı</td>
                <td>@order.FirstName @order.LastName</td>
                <td rowspan="3">Toplam: @order.TotalPrice()</td>
            </tr>
            <tr>
                <td colspan="2">Adres:</td>
                <td>@order.Address</td>
            </tr>
            <tr>
                <td colspan="2">Telefon:</td>
                <td>@order.Phone</td>
            </tr>
            <tr>
                <td colspan="2">Email:</td>
                <td>@order.Email</td>
            </tr>
            <tr>
                <td colspan="2">Sipariş Tarihi:</td>
                <td>@order.OrderDate.ToShortDateString() / @order.OrderDate.ToShortTimeString()</td>
            </tr>
            <tr>
                <td colspan="2">Odeme Durumu:</td>
                <td>@GetEnumValue.GetDescription(order.PaymentTypes)</td>
            </tr>
            <tr>
                <td colspan="2">Sipariş Durumu:</td>
                <td>@GetEnumValue.GetDescription(order.OrderState)</td>
            </tr>
        </tfoot>
    </table>
}

